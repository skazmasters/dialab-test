<div class="form-field">
  <input class="form-field__input" id="{{id}}" name="{{#if name}}{{name}}{{else}}{{id}}{{/if}}"
         type="{{#if name}}{{type}}{{else}}text{{/if}}" {{#if required}}required="required"{{/if}}/>
  <span class="form-field__highlight"></span>
  <span class="form-field__bar"></span>
  <label class="form-field__label" for="{{id}}">{{label}}</label>
</div>
